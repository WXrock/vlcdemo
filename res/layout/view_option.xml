<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout 
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal"  >
       
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="使用无线网络"/>
        
        <CheckBox
        	android:id="@+id/checkbox_wifi"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <RelativeLayout 
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal"  >
       
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="使用有线网络"/>
        
        <CheckBox
        	android:id="@+id/checkbox_eth"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_alignParentRight="true"/>
    </RelativeLayout>
    
    <RelativeLayout 
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal"  >
       
        <TextView 
            android:id="@+id/flip_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="是否翻转图像"/>
        
        <CheckBox
        	android:id="@+id/checkbox_flip"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_alignParentRight="true"/>
    </RelativeLayout>
    
	<LinearLayout 
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal"  >
    
	    <TextView 
	        android:id="@+id/var_info"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:text="设置置信度："/>
	    
	    <TextView 
	        android:id="@+id/var_num"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:text="0.3"/>

	    <SeekBar
	        android:id="@+id/seekbar"
	        android:layout_width="180dp"
	        android:layout_height="wrap_content" 
	        android:max="100"
	        android:progress="0"/>

    </LinearLayout>
    
</LinearLayout>
